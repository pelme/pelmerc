[commit]
    template = ~/.pelmerc/git_commit_template.txt

[user]
	name = Andreas Pelme
	email = andreas@pelme.se

[alias]
    recent = !git branch --sort=-committerdate | head -n10
    done = "!branch=$(git rev-parse --abbrev-ref HEAD); git switch master && git branch -D $branch"


[core]
	precomposeunicode = true

[diff]
	noprefix = true

[pull]
	rebase = true
[push]
	default = current
