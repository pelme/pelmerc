[commit]
    template = ~/.pelmerc/git_commit_template.txt

[user]
	name = Andreas Pelme
	email = andreas@pelme.se

[color]
    ui = auto


[alias]
    br = branch
    st = status
    co = checkout
    ci = commit
    aa = add --all
    di = diff
    dc = diff --cached
    rs = reset
    rsh = reset HEAD
    amend = commit --amend
    f = fetch --all

    head = !git l -1
    h = !git head
    hp = "!source ~/.githelpers && show_git_head"
    r = !git l -30
    ra = !git r --all
    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all


[push]
	default = current

[diff "po"]
    textconv=msgcat --no-location --no-wrap --sort-output
[core]
	precomposeunicode = true
